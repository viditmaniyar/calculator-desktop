<!DOCTYPE html>
<html>
  <head>
    <title><%= name %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  </head>
  <body>
    <h1><%= name %></h1>
    First Number: <input type="text" id ="fnum"><br/>
    Second Number: <input type="text" id ="snum"><br/>
    <button id="add">Add!</button>&nbsp;<button id="sub">Sub!</button>&nbsp;<button id="mul">Mul!</button>&nbsp;<button id="div">Div!</button><br/>
    
    Result: <input type="text" id ="result"><br/>
     
     <script>
    $(document).ready(function(){
    	//alert("add clicked");
    	$("#add").click(function(){
    	var fnum = $("#fnum").val();
    	var snum = $("#snum").val();
    	
    	$.post("http://localhost:3000/add", 
    	
    	{
    		number1: fnum,
    		number2: snum
    	}, 
    	
    	function(data){
    		//alert("Addition is: "+ data);
    		$("#result").val(data);
	    	});
    	});
    });
    
    
    
    $(document).ready(function(){
    
    	$("#sub").click(function(){
    		
    		var fnum = $("#fnum").val();
    		var snum = $("#snum").val();
    		
    		$.post("http://localhost:3000/sub",	
    		{
    			number1: fnum,
    			number2: snum
    		},
    		function(data){
    		$("#result").val(data);
    		});    
    	});
    });
    
    $(document).ready(function(){
    	
    	$("#mul").click(function(){
    	
    		var fnum = $("#fnum").val();
    		var snum = $("#snum").val();
    		
    		$.post("http://localhost:3000/mul",
    		{
    			number1: fnum,
    			number2: snum
    		},
    		
    		function(data){
    			$("#result").val(data);
    		});
    	});
    	
    });
    
    $(document).ready(function(){
    	
    	$("#div").click(function(){
    	
    		var fnum = $("#fnum").val();
    		var snum = $("#snum").val();
    		
    		$.post("http://localhost:3000/div",
    		{
    			number1: fnum,
    			number2: snum
    		},
    		
    		function(data){
    			$("#result").val(data);
    		});
    	});
    	
    });
    
    </script>
  </body>
</html>
